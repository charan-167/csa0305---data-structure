#include <stdio.h>
#include <string.h>

int main() {
    char haystack[100], needle[50];
    printf("Enter main string (haystack): ");
    scanf("%s", haystack);
    printf("Enter substring (needle): ");
    scanf("%s", needle);

    char *pos = strstr(haystack, needle);
    if (pos != NULL)
        printf("Substring found at position %ld\n", pos - haystack);
    else
        printf("Substring not found.\n");

    return 0;
}
