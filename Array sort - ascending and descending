#include <stdio.h>

void sort(int arr[], int n, int order) {
    for(int i=0; i<n-1; i++) {
        for(int j=i+1; j<n; j++) {
            if((order == 1 && arr[i] > arr[j]) || (order == 2 && arr[i] < arr[j])) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

int main() {
    int arr[100], n, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter elements: ");
    for(i=0; i<n; i++)
        scanf("%d", &arr[i]);

    sort(arr, n, 1); // Ascending
    printf("Ascending: ");
    for(i=0; i<n; i++) printf("%d ", arr[i]);

    sort(arr, n, 2); // Descending
    printf("\nDescending: ");
    for(i=0; i<n; i++) printf("%d ", arr[i]);

    return 0;
}
